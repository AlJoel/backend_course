extends ../layout

block content
  h1= titulo
  a(href="/turnos/nuevo") + Nuevo turno
  if turnos && turnos.length
    table
      thead
        tr
          th Paciente
          th Día
          th Hora
          th Motivo
          th Médico
      tbody
        each t in turnos
          tr
            td= t.pacienteId
            td= t.dia
            td= t.hora
            td= t.motivo
            if t.medicoAsignado && t.medicoAsignado.nombre
              td= t.medicoAsignado.nombre
            else if t.medicoAsignado
              td= t.medicoAsignado
            else
              td Sin médico
  else
    p No hay turnos cargados.
